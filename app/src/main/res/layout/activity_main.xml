<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#757575"
    android:padding="6dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <include
            android:id="@+id/quiz_start_layout"
            layout="@layout/quiz_start" />

        <include
            android:id="@+id/question_1_layout"
            layout="@layout/question_1" />

        <include
            android:id="@+id/question_2_layout"
            layout="@layout/question_2" />

        <include
            android:id="@+id/question_3_layout"
            layout="@layout/question_3" />

        <include
            android:id="@+id/question_4_layout"
            layout="@layout/question_4" />

        <include
            android:id="@+id/question_5_layout"
            layout="@layout/question_5" />

        <include
            android:id="@+id/submit_layout"
            layout="@layout/submit" />

    </LinearLayout>

</ScrollView>